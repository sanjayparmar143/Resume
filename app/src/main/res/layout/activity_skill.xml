<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wp2"
    tools:context=".Skill">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Skills"
            android:textSize="17dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:letterSpacing="0.2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/skill1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:textColorHint="#99000000"
            android:background="@drawable/sp"
            android:padding="10dp"
            android:hint="Skill 1"/>


        <EditText
            android:id="@+id/skill2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:textColorHint="#99000000"
            android:background="@drawable/sp"
            android:padding="10dp"
            android:hint="Skill 2"/>


        <EditText
            android:id="@+id/skill3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:textColorHint="#99000000"
            android:background="@drawable/sp"
            android:padding="10dp"
            android:hint="Skill 3"/>


        <EditText
            android:id="@+id/skill4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:textColorHint="#99000000"
            android:background="@drawable/sp"
            android:padding="10dp"
            android:hint="Skill 4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <Button
            android:id="@+id/reset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/sp"
            android:text="Reset"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/sp"
            android:text="Next"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="5dp"/>



    </LinearLayout>
</LinearLayout>